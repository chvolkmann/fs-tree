{
  "name": "@chvl/fs-tree",
  "version": "1.0.0",
  "description": "Prints a file system tree similar to the Unix tree command",
  "author": "Christian Volkmann <info+npm@chvolkmann.de>",
  "license": "MIT",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist bin",
    "build:lib": "bun build --target=node --sourcemap=external --outdir=dist src/main.ts",
    "build:cli": "bun build --compile --outfile bin/tree src/main.ts",
    "build": "bun run build:lib && bun run build:cli"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chvolkmann/fs-tree.git"
  },
  "bugs": {
    "url": "https://github.com/chvolkmann/fs-tree/issues"
  },
  "homepage": "https://github.com/chvolkmann/fs-tree"
}